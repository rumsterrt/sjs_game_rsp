$menuHeight = 6u
$logoColor = #FCB69D

.wrapper
  margin 0 auto
  width calc(100% - 6u)
  height 100%
  +tablet()  
    width calc(100% - 6u)
  +wide()  
    max-width calc(100% - 4u)

.layout
  background white
  width 100%
  min-height 100%

.content
  margin-top 4u

.menu
  background-color rgba(black, 0.02)
  height $menuHeight
  z-index 1
  align-items center
  padding 0 2u
  border-bottom-width 1px
  border-bottom-color rgba(black, 0.05)

.logo
  margin-left 2u
  color $UI.colors.secondaryText
  font(xl)

.body
  flex 1
