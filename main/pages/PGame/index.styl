
.gameField
    width 100%
    display flex
    flex-direction row
    justify-content: space-around
.info
    margin-bottom 4u
.centerText
    text-align center

.playerField
    &.right
        align-items flex-end

.currentPlayerState
    margin-top 2u
    width auto
    &.left
        transform-origin center bottom
        transform scaleX(-1)

.responseWrapper
    margin-top 4u
    width 100%
    justify-content space-around

@keyframes shake_hand
  from
    color blue
  to
    color yellow
