.root
    height 100%
    display flex
    justify-content space-between

.titleContainer
    width 100%
    justify-content center
    align-items center

.teacherButtons
    margin-top 4u
    width 100%
    +tablet()
        flex-direction row

.teacherButton
    flex-grow 1
    &.last
        margin-top 2u
        +tablet()
            margin-top 0
            margin-left 2u

.gameField
    flex-grow 1
    width 100%
    display flex
    flex-direction row
    justify-content: space-around
.info
    margin-bottom 2u
.centerText
    text-align center
    margin-bottom 2u

.playerField
    &.right
        align-items flex-end

.currentPlayerState
    margin-top 2u
    width auto
    height 100%
    width 20vw
    +tablet()
        width 15vw

.responseWrapper
    margin-top 4u
    margin-bottom 6u
    width 100%
    justify-content space-around

.chronologyButton
    position absolute
    right 0

@keyframes shake_hand
  from
    color blue
  to
    color yellow
